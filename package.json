{
  "name": "geobin",
  "private": true,
  "version": "0.0.0",
  "description": "Inspect HTTP requests with geographic data",
  "repository": "https://github.com/geoloqi/geobin-go",
  "license": "MIT",
  "devDependencies": {
    "karma": "~0.10",
    "protractor": "~0.17.0",
    "http-server": "^0.6.1",
    "bower": "^1.3.1",
    "shelljs": "^0.2.6"
  },
  "scripts": {
    "postinstall": "./node_modules/bower/bin/bower install",

    "start": "./node_modules/http-server/bin/http-server app -p 8000",
    "test": "./node_modules/karma/bin/karma start test/karma.conf.js --single-run",

    "update-webdriver": "webdriver-manager update",
    "e2e": "./node_modules/protractor/bin/protractor test/protractor-conf.js",
    "test-forever": "./node_modules/karma/bin/karma start test/karma.conf.js",

    "browse": "open http://localhost:8080/",

    "update-index-async": "node -e \"require('shelljs/global'); sed('-i', /\\/\\/@@NG_LOADER_START@@[\\s\\S]*\\/\\/@@NG_LOADER_END@@/, '//@@NG_LOADER_START@@\\n' + cat('app/bower_components/angular-loader/angular-loader.min.js') + '\\n//@@NG_LOADER_END@@', 'app/index-async.html');\""
  }
}
